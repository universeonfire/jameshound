<p id="notice"><%= notice %></p>

<h1>Sips</h1>

<table>
  <thead>
    <tr>
      <th>Siparis hesabı</th>
      <th>Siparis stoğu</th>
      <th>Siparis tarihi</th>
      <th>Termin tarihi</th>
      <th>Siparis miktar</th>
      <th>Sevk miktar</th>
      <th>Kalan miktar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sips.each do |sip| %>
      <tr>
        <td><%= sip.cari.unvan %></td>
        <td><%= sip.stok.stok_adi %></td>
        <td><%= sip.siparis_tarihi %></td>
        <td><%= sip.termin_tarihi %></td>
        <td><%= sip.siparis_miktar %></td>
        <td><%= sip.sevk_miktar %></td>
        <td><%= sip.kalan_miktar %></td>
        <td><%= link_to 'Show', sip %></td>
        <td><%= link_to 'Edit', edit_sip_path(sip) %></td>
        <td><%= link_to 'Destroy', sip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

